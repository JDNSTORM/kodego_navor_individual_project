<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments_profile.ProfileFragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_address"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_address_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="5dp"
        android:layout_marginHorizontal="5dp"
        />
    <TextView
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ic_address"
        app:layout_constraintBottom_toBottomOf="@id/ic_address"
        app:layout_constraintStart_toEndOf="@id/ic_address"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_marginHorizontal="5dp"
        tools:text="Baguio City, Benguet, Philippines"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_email_24"
        app:layout_constraintTop_toBottomOf="@id/ic_address"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="5dp"
        android:layout_marginHorizontal="5dp"
        />
    <TextView
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ic_email"
        app:layout_constraintBottom_toBottomOf="@id/ic_email"
        app:layout_constraintStart_toEndOf="@id/ic_email"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_marginHorizontal="5dp"
        tools:text="email@email.email"
        />

    <TextView
        android:id="@+id/label_professional_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Professional Summary"
        app:layout_constraintTop_toBottomOf="@id/ic_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/professional_summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@android:color/black"
        tools:text="Professional Summary Text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/label_professional_summary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:contentDescription="Edit Button" />
</androidx.constraintlayout.widget.ConstraintLayout>