<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_enrollment_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/date_enrolled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="July 2022"
                android:textAlignment="center"
                android:padding="5dp"
                style="@style/TextAppearance.MaterialComponents.Body1"
                />
            <TextView
                android:id="@+id/tv_enrollment_separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:padding="5dp"
                android:textAlignment="center"
                style="@style/TextAppearance.MaterialComponents.Body1"
                />
            <TextView
                android:id="@+id/date_graduated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="July 2022"
                android:padding="5dp"
                android:textAlignment="center"
                style="@style/TextAppearance.MaterialComponents.Body1"
                />
        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="5dp"
            android:background="?android:attr/listDivider"
            />
        <LinearLayout
            android:id="@+id/ll_education"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.8"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="Bachelor of Science"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/field_of_study"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="Information Technology"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Title"
                />
            <TextView
                android:id="@+id/school_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="Saint Louis University"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                />
            <!--      Views are hidden unless values exist      -->
            <TextView
                android:id="@+id/school_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible"
                style="@style/TextAppearance.MaterialComponents.Body2"
                tools:text="Upper Bonifacio St, Baguio, Benguet"
                app:drawableStartCompat="@drawable/ic_address_24" />
            <TextView
                android:id="@+id/school_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="https://www.slu.edu.ph/"
                app:drawableStartCompat="@drawable/ic_website_24" />
            <TextView
                android:id="@+id/school_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                tools:text="(074) 442 2793"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:visibility="gone"
                tools:visibility="visible"
                app:drawableStartCompat="@drawable/ic_phone_24" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_drag_handle_24"
            android:padding="5dp"
            android:visibility="gone"
            tools:visibility="visible"
            />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>