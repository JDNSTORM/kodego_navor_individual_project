<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/layout_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:alpha="0.7"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/efab_skills_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        app:icon="@drawable/ic_commands_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/label_main_category_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="Main Category"
        app:layout_constraintTop_toTopOf="@id/btn_add_main_category"
        app:layout_constraintBottom_toBottomOf="@id/btn_add_main_category"
        app:layout_constraintEnd_toStartOf="@id/btn_add_main_category"
        android:visibility="gone"
        tools:visibility="visible"
        style="@style/TextAppearance.MaterialComponents.Body1"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_main_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="Add Main Category"
        android:src="@drawable/ic_add_24"
        app:layout_constraintTop_toTopOf="@id/btn_edit_main_category"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_main_category"
        app:layout_constraintBottom_toBottomOf="@id/btn_edit_main_category"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_edit_main_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="Edit Main Category"
        android:src="@drawable/ic_edit_24"
        app:layout_constraintEnd_toStartOf="@id/btn_delete_main_category"
        app:layout_constraintBottom_toTopOf="@id/efab_skills_options"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_delete_main_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="Delete Main Category"
        android:src="@drawable/ic_delete_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/efab_skills_options"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/label_sub_category_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="Sub Category &amp; Skills"
        app:layout_constraintTop_toTopOf="@id/btn_add_sub_category"
        app:layout_constraintBottom_toBottomOf="@id/btn_add_sub_category"
        app:layout_constraintEnd_toStartOf="@id/btn_add_sub_category"
        android:visibility="gone"
        tools:visibility="visible"
        style="@style/TextAppearance.MaterialComponents.Body1"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_sub_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="Add Sub Category"
        android:src="@drawable/ic_add_subcategory_24"
        app:layout_constraintTop_toTopOf="@id/btn_edit_sub_category"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_sub_category"
        app:layout_constraintBottom_toBottomOf="@id/btn_edit_sub_category"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_edit_sub_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="Edit Sub Category"
        android:src="@drawable/ic_edit_subcategory_24"
        app:layout_constraintEnd_toStartOf="@id/btn_delete_sub_category"
        app:layout_constraintBottom_toTopOf="@id/btn_edit_main_category"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_delete_sub_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="Delete Sub Category"
        android:src="@drawable/ic_delete_subcategory_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_edit_main_category"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/skill_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_margin="10dp"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/skill_sub"
        tools:text="Main Category"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/skill_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_margin="10dp"
        style="@style/TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_edit_sub_category"
        tools:text="Sub Category"
        android:visibility="gone"
        tools:visibility="visible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>