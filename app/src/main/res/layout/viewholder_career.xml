<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<!--
    Other Information are hidden unless they are available
-->
    <TextView
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="ICT Coordinator"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/employment_period"
        />
    <TextView
        android:id="@+id/employment_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="July 2022 - July 2022"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@id/position"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/company_name"
        />
    <TextView
        android:id="@+id/company_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="Remnant International College, Inc."
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/employment_period"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toTopOf="@id/company_address"
        app:layout_constraintStart_toStartOf="@id/company_name"
        app:layout_constraintEnd_toStartOf="@id/company_address"
        app:layout_constraintBottom_toBottomOf="@id/company_address"
        android:src="@drawable/ic_address_24"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/company_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="Parisas St Camp 7, Baguio, Benguet"
        app:layout_constraintTop_toBottomOf="@id/company_name"
        app:layout_constraintStart_toEndOf="@id/ic_address"
        app:layout_constraintEnd_toEndOf="@id/company_name"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toTopOf="@id/company_website"
        app:layout_constraintStart_toStartOf="@id/company_name"
        app:layout_constraintEnd_toStartOf="@id/company_website"
        app:layout_constraintBottom_toBottomOf="@id/company_website"
        android:src="@drawable/ic_website_24"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/company_website"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="https://remnantschools.com/"
        app:layout_constraintTop_toBottomOf="@id/company_address"
        app:layout_constraintStart_toEndOf="@id/ic_website"
        app:layout_constraintEnd_toEndOf="@id/company_name"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toTopOf="@id/company_telephone"
        app:layout_constraintStart_toStartOf="@id/company_name"
        app:layout_constraintEnd_toStartOf="@id/company_telephone"
        app:layout_constraintBottom_toBottomOf="@id/company_telephone"
        android:src="@drawable/ic_phone_24"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/company_telephone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="(074) 422 3324"
        app:layout_constraintTop_toBottomOf="@id/company_website"
        app:layout_constraintStart_toEndOf="@id/ic_phone"
        app:layout_constraintEnd_toEndOf="@id/company_name"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_competencies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/company_telephone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>