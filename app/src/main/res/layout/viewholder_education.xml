<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_enrollment_period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="0.2"
        android:padding="5dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/date_enrolled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="July 2022"
            android:textAlignment="center"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/tv_enrollment_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="-"
            android:padding="5dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/date_graduated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="July 2022"
            android:padding="5dp"
            android:textAlignment="center"
            />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toEndOf="@id/ll_enrollment_period"
        app:layout_constraintEnd_toStartOf="@id/degree"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/degree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="0.8"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="Bachelor of Science"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/field_of_study"
        />
    <TextView
        android:id="@+id/field_of_study"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="Information Technology"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/degree"
        app:layout_constraintStart_toStartOf="@id/school_name"
        app:layout_constraintEnd_toEndOf="@id/school_name"
        />
    <TextView
        android:id="@+id/school_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="Saint Louis University"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/field_of_study"
        app:layout_constraintStart_toStartOf="@id/degree"
        app:layout_constraintEnd_toEndOf="@id/degree"
        />
    <TextView
        android:id="@+id/school_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_address_24"
        android:textAlignment="center"
        tools:text="Upper Bonifacio St, Baguio, Benguet"
        app:layout_constraintTop_toBottomOf="@id/school_name"
        app:layout_constraintStart_toStartOf="@id/school_name"
        app:layout_constraintEnd_toEndOf="@id/school_name"
        />
    <TextView
        android:id="@+id/school_website"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_website_24"
        android:textAlignment="center"
        tools:text="https://www.slu.edu.ph/"
        app:layout_constraintTop_toBottomOf="@id/school_address"
        app:layout_constraintStart_toStartOf="@id/school_name"
        app:layout_constraintEnd_toEndOf="@id/school_name"
        />
    <TextView
        android:id="@+id/school_telephone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:padding="5dp"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_phone_24"
        tools:text="(074) 442 2793"
        app:layout_constraintTop_toBottomOf="@id/school_website"
        app:layout_constraintStart_toStartOf="@id/school_name"
        app:layout_constraintEnd_toEndOf="@id/school_name"
        />

</androidx.constraintlayout.widget.ConstraintLayout>