<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_enrollment_period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="0.2"
        android:padding="5dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/school_name"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/date_enrolled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="July 2022"
            android:textAlignment="center"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/tv_enrollment_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="-"
            android:padding="5dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/date_graduated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="July 2022"
            android:padding="5dp"
            android:textAlignment="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/school_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="0.8"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="Saint Louis University"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ll_enrollment_period"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/school_address"
        app:layout_constraintStart_toStartOf="@id/school_name"
        app:layout_constraintEnd_toStartOf="@id/school_address"
        app:layout_constraintBottom_toBottomOf="@id/school_address"
        android:src="@drawable/ic_address_24"
        />
    <TextView
        android:id="@+id/school_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="Upper Bonifacio St, Baguio, Benguet"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/school_name"
        app:layout_constraintStart_toEndOf="@id/ic_address"
        app:layout_constraintEnd_toEndOf="@id/school_name"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/school_website"
        app:layout_constraintStart_toStartOf="@id/school_name"
        app:layout_constraintEnd_toStartOf="@id/school_website"
        app:layout_constraintBottom_toBottomOf="@id/school_website"
        android:src="@drawable/ic_website_24"
        />
    <TextView
        android:id="@+id/school_website"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="https://www.slu.edu.ph/"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/school_address"
        app:layout_constraintStart_toEndOf="@id/ic_website"
        app:layout_constraintEnd_toEndOf="@id/school_name"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/school_telephone"
        app:layout_constraintStart_toStartOf="@id/school_name"
        app:layout_constraintEnd_toStartOf="@id/school_telephone"
        app:layout_constraintBottom_toBottomOf="@id/school_telephone"
        android:src="@drawable/ic_phone_24"
        />
    <TextView
        android:id="@+id/school_telephone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="(074) 442 2793"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/school_website"
        app:layout_constraintStart_toEndOf="@id/ic_phone"
        app:layout_constraintEnd_toEndOf="@id/school_name"
        />
    <TextView
        android:id="@+id/degree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="Bachelor of Science"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/school_telephone"
        app:layout_constraintStart_toStartOf="@id/school_name"
        app:layout_constraintEnd_toEndOf="@id/school_name"
        />
    <TextView
        android:id="@+id/field_of_study"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:padding="5dp"
        android:textAlignment="center"
        tools:text="Information Technology"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/degree"
        app:layout_constraintStart_toStartOf="@id/school_name"
        app:layout_constraintEnd_toEndOf="@id/school_name"
        />
</androidx.constraintlayout.widget.ConstraintLayout>